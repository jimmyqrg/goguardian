{
  "manifest_version": 3,
  "name": "GoGuardian",
  "version": "1.0",
  "description": "The most powerful classroom management tool for schools.",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "offscreen"
  ],

  "icons": {
    "16": "icons/favicon-light.png",
    "32": "icons/favicon-light.png",
    "48": "icons/favicon-light.png",
    "128": "icons/favicon-light.png"
  },

  "action": {
    "default_title": "GoGuardian"
  }
}
